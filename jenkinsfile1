    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                git 'https://github.com/Johithkrishna/calculator.git'
            }
        }

        stage('Build') {
            steps {
                // Run your build commands
                sh 'mvn build'
            }
        }

        stage('Unit Test') {
            steps {
                // Run your unit tests
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                // generate war file
                sh 'mvn package'
            }
        }

       // stage('SonarQube Analysis') {
